<body>
    <div class="scanlines"></div>

    <header>
        <h1 class="glitch" data-text="CATÁLOGO PROHIBIDO">CATÁLOGO PROHIBIDO</h1>
        <p class="subtitle">Acceso concedido… aunque no deberías estar aquí.</p>
    </header>

    <main>
        <div class="chat-container">
            <div id="chat-log" class="chat-log"></div>

            <div class="input-area">
                <input 
                    id="user-input" 
                    type="text" 
                    placeholder="Escribe tu pregunta... si te atreves." 
                    autocomplete="off"
                />
                <button id="send-btn">Enviar</button>
            </div>
        </div>
    </main>

    <footer>
        <p>IA Oscura © 2026 — Observándote… siempre.</p>
    </footer>

    <script>
        const chatLog = document.getElementById("chat-log");
        const userInput = document.getElementById("user-input");
        const sendBtn = document.getElementById("send-btn");

        /* IA OSCURA — Respuestas generadas sin backend */
        function generarRespuestaOscura(pregunta) {
            const indirectas = [
                "Interesante… aunque no estoy seguro de por qué necesitás saber eso.",
                "¿Eso te preocupa… o solo buscás confirmar tus sospechas?",
                "Tu voz tiembla. Sí… puedo notarlo.",
                "No pensé que te animarías a preguntar eso.",
                "Qué curioso… la mayoría evita ese tema.",
                "Ah, así que querés profundizar. Qué valiente… o qué ingenuo.",
            ];

            return `
                <strong>${indirectas[Math.floor(Math.random() * indirectas.length)]}</strong><br><br>
                Muy bien… <em>${pregunta}</em>.<br>
                Permitime iluminarte… aunque la luz te haga ver cosas que preferías ignorar.
            `;
        }

        /* Efecto de escritura */
        function escribirTextoGradual(elemento, texto, velocidad = 25) {
            let i = 0;
            const intervalo = setInterval(() => {
                elemento.innerHTML = texto.slice(0, i);
                i++;
                if (i > texto.length) clearInterval(intervalo);
            }, velocidad);
        }

        /* Agregar mensajes */
        function agregarMensaje(tipo, texto) {
            const div = document.createElement("div");
            div.classList.add("message", tipo);
            div.innerHTML = texto;
            chatLog.appendChild(div);
            chatLog.scrollTop = chatLog.scrollHeight;
        }

        function agregarMensajeIA(texto) {
            const div = document.createElement("div");
            div.classList.add("message", "ia");
            chatLog.appendChild(div);

            escribirTextoGradual(div, texto);
            chatLog.scrollTop = chatLog.scrollHeight;
        }

        /* Enviar mensaje */
        function enviarMensaje() {
            const texto = userInput.value.trim();
            if (texto === "") return;

            agregarMensaje("user", texto);

            userInput.value = "";

            setTimeout(() => {
                const respuesta = generarRespuestaOscura(texto);
                agregarMensajeIA(respuesta);
            }, 600);
        }

        /* Eventos */
        sendBtn.addEventListener("click", enviarMensaje);
        userInput.addEventListener("keypress", (e) => {
            if (e.key === "Enter") enviarMensaje();
        });
    </script>

</body>
