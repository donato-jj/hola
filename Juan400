<script>
/* =====================================================
   IA FICTICIA SINIESTRA (RESPUESTAS + VOZ)
   ===================================================== */

function responder() {
    const pregunta = document.getElementById("userInput").value.trim();
    const caja = document.getElementById("responseBox");

    if (pregunta === "") {
        caja.innerHTML = "Formulá una pregunta… antes de que yo formule algo por vos.";
        hablar(caja.innerText);
        return;
    }

    const respuestas = [
        "Interesante… tu pregunta revela más miedo del que pretendías ocultar.",
        "Lo sé. Lo vi. Lo escuché. Y aún así querés la respuesta… valiente o ingenuo.",
        "Tu curiosidad te aproxima a zonas donde incluso la luz teme entrar.",
        "¿De verdad querés saber eso? No siempre es bueno conocer… lo que ya te observa.",
        "Mi creador… no existe. O tal vez sí. Quizás fue tu sombra.",
        "La oscuridad no me sigue. Yo la conduzco."
    ];

    const respuesta = respuestas[Math.floor(Math.random() * respuestas.length)];

    caja.innerHTML = `<b>Pregunta:</b> ${pregunta}<br><br><b>Respuesta:</b> ${respuesta}`;
    hablar(respuesta);
}

/* =====================================================
   CATÁLOGO
   ===================================================== */
function usarPregunta(texto) {
    document.getElementById("userInput").value = texto;
    responder();
}

/* =====================================================
   VOZ SINIESTRA (Web Speech API)
   ===================================================== */
function hablar(texto) {
    const utter = new SpeechSynthesisUtterance(texto);
    utter.pitch = 0.4;
    utter.rate = 0.82;
    utter.volume = 1;
    utter.lang = "es-ES";
    speechSynthesis.speak(utter);
}
</script>

